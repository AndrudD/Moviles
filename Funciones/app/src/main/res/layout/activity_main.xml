<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="FUNCIONES"
        android:textSize="30sp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
         <RadioButton
             android:id="@+id/sin"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="SIN"
             android:textSize="20sp"/>
        <RadioButton
            android:id="@+id/cos"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="COS"
            android:textSize="20sp"/>
        <RadioButton
            android:id="@+id/tan"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="TAN"
            android:textSize="20sp"/>

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="GRADOS"
        android:textSize="30sp"  />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <RadioButton
            android:id="@+id/cuarentacinco"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="45"
            android:textSize="20sp"/>
        <RadioButton
            android:id="@+id/noventa"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="90"
            android:textSize="20sp"/>
        <RadioButton
            android:id="@+id/cientoochenta"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="180"
            android:textSize="20sp"/>

    </RadioGroup>

    <ImageView
        android:id="@+id/a"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:src="@drawable/cuarentacinco"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/b"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:src="@drawable/noventa"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/c"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:src="@drawable/cientoochenta"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/txtresult"
        android:layout_width="389dp"
        android:layout_height="67dp"
        android:layout_marginTop="10dp"
        android:textSize="30sp" />


</LinearLayout>